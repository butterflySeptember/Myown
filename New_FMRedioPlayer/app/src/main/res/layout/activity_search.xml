<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/search_back"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:src="@drawable/select_search_left_bg"
            android:layout_height="30dp" />

        <EditText
            android:hint="请输入专辑关键字"
            android:id="@+id/search_input"
            android:textCursorDrawable="@drawable/shape_edit_text_cursor"
            android:background="@drawable/shape_edit_text_bg"
            android:paddingRight="5dp"
            android:textColor="@color/main_color"
            android:singleLine="true"
            android:layout_height="30dp"
            android:layout_width="320dp"/>

        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:id="@+id/search_btn"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <com.example.new_fmredioplayer.views.FlowTextLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/flow_text_layout"/>

</LinearLayout>
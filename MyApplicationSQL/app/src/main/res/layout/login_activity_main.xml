<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background_main"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_linear_layout"
        android:orientation="vertical">


        <TextView
            android:id="@+id/main_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:padding="10dp"
            android:text="Login"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="@string/login_text_id"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/main_login_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="请输入用户名" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/colorText"
                android:text="@string/login_text_password"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/main_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="请输入密码" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_height="20dp">

            <CheckedTextView
                android:id="@+id/checkbox_new_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorText"
                android:text="新建账户？"
                android:textSize="15sp" />

            <CheckedTextView
                android:id="@+id/checkbox_forget_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorText"
                android:text="忘记密码？"
                android:textSize="15sp" />
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/login_btn"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@android:color/holo_blue_light"
            />

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/login_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_centerHorizontal="true"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            android:text="同意用户协议"/>

    </RelativeLayout>
</RelativeLayout>